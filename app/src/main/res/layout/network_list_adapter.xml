<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal">
    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/network_item_image"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:src="@mipmap/camera_icon"/>

    <LinearLayout
        android:id="@+id/network_name_description_layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingLeft="10sp"
        android:layout_weight="6"
        android:clickable="true"
        android:orientation="vertical">

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/network_item_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Name of Network"
            android:textSize="15sp" />

        <com.google.android.material.textview.MaterialTextView
            android:id="@+id/network_item_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description of Network"
            android:textSize="12sp" />

    </LinearLayout>

    <Button
        android:id="@+id/network_subscribe_button"
        android:layout_width="100sp"
        android:layout_height="wrap_content"
        android:text="@string/subscribe_btn_text" />
</LinearLayout>