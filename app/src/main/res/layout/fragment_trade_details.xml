<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.networks.NetworkDetailsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/trade_details_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/trade_details_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:gravity="center_vertical"
            android:layout_margin="10dp"
            android:src="@mipmap/account_icon"
            />

        <LinearLayout
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/trade_details_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="Name of Network"
                android:textSize="20sp" />

            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/trade_details_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Description of Network"
                android:textSize="15sp" />
        </LinearLayout>
    </LinearLayout>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/trade_offers_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="@string/trade_offers_title"
        android:textSize="30sp" />

    <ListView
        android:id="@+id/trade_details_offers_list_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="15sp"
        android:divider="@android:color/transparent"
        android:dividerHeight="10.0sp"
        android:layout_weight="10"/>
</LinearLayout>